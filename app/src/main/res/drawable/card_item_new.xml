<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/ripple_colour">

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
                <solid android:color="@color/defaultRed_100" />
                <corners
                    android:bottomLeftRadius="@dimen/header_corner_radius"
                    android:bottomRightRadius="@dimen/header_corner_radius"/>
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@color/card_item_bg" />
            <corners
                android:bottomLeftRadius="@dimen/header_corner_radius"
                android:bottomRightRadius="@dimen/header_corner_radius"/>
        </shape>
    </item>
</ripple>
