<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/session_results_card"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/card_item_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txtCardName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:maxLines="2"
            android:text="Flashcard 1"
            android:textSize="@dimen/card_item_font_size" />

        <TextView
            android:id="@+id/txtKnownCount"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="?attr/actionBarItemBackground"
            android:gravity="center_horizontal"
            android:paddingVertical="10dp"
            android:text="00"
            android:textSize="@dimen/card_item_font_size"
            android:textStyle="bold"
            android:tooltipText="The number of times you said you knew the card" />

        <TextView
            android:id="@+id/txtUnknownCount"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="?attr/actionBarItemBackground"
            android:gravity="center_horizontal"
            android:paddingVertical="10dp"
            android:text="00"
            android:textSize="@dimen/card_item_font_size"
            android:textStyle="bold"
            android:tooltipText="The number of times you said you didn't know the card" />

        <TextView
            android:id="@+id/txtTotalCount"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="?attr/actionBarItemBackground"
            android:gravity="center_horizontal"
            android:paddingVertical="10dp"
            android:text="000"
            android:textSize="@dimen/card_item_font_size"
            android:textStyle="bold"
            android:tooltipText="The total number of times you saw the card" />

        <TextView
            android:id="@+id/txtCardPercent"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="?attr/actionBarItemBackground"
            android:gravity="center_horizontal"
            android:paddingVertical="10dp"
            android:text="100%"
            android:textSize="@dimen/card_item_font_size"
            android:textStyle="bold"
            android:tooltipText="Your accuracy of knowing the card" />


    </LinearLayout>

</LinearLayout>
