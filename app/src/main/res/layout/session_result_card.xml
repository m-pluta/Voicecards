<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txtCardName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:maxLines="2"
            android:text="Flashcard 1"
            android:textSize="@dimen/card_item_font_size" />

        <TextView
            android:id="@+id/txtKnownCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="00"
            android:textSize="@dimen/card_item_font_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtUnknownCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="00"
            android:textSize="@dimen/card_item_font_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTotalCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="000"
            android:textSize="@dimen/card_item_font_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtCardPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:text="100%"
            android:textSize="@dimen/card_item_font_size"
            android:textStyle="bold" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacer_height"
        android:layout_marginHorizontal="@dimen/card_item_spacer_margins"
        android:background="@color/spacer_color" />

</LinearLayout>
